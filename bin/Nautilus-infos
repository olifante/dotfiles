#!/bin/bash

zenity --info --text="
<b>\$NAUTILUS_SCRIPT_SELECTED_FILE_PATHS</b> :
<i>chemins des fichiers sélectionnés séparés par des retours à la ligne (newline) (uniquement pour les fichiers locaux)</i>

$NAUTILUS_SCRIPT_SELECTED_FILE_PATHS

<b>\$NAUTILUS_SCRIPT_SELECTED_URIS</b> :
<i>URIs des fichiers sélectionnés séparés par des retours à la ligne (newline)</i>

$NAUTILUS_SCRIPT_SELECTED_URIS

<b>\$NAUTILUS_SCRIPT_CURRENT_URI</b> :
<i>URI de l'emplacement actuel</i>

$NAUTILUS_SCRIPT_CURRENT_URI 

<b>\$NAUTILUS_SCRIPT_WINDOW_GEOMETRY</b> :
<i>position et taille de la fenêtre actuelle</i>

$NAUTILUS_SCRIPT_WINDOW_GEOMETRY
"

exit 0
